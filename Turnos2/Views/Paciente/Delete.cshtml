    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable teal darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><h5><b>@Html.DisplayFor(model => model.Nombre), @Html.DisplayFor(model => model.Apellido)</h5></b></span>                   
                <dt>
                    <h6>@Html.DisplayNameFor(model => model.Direccion):  @Html.DisplayFor(model => model.Direccion)</h6>
