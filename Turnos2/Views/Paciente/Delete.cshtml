@model Turnos2.Models.Paciente
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>
<body>

<h4>Seguro desea eliminar el registro?</h4>
